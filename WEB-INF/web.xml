<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
         
    <display-name>iSLU Student Portal</display-name>
    <description>Saint Louis University Student Portal System</description>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>
    
    <!-- Context Parameters -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>messages</param-value>
    </context-param>
    
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- Statement of Accounts Servlet -->
    <servlet>
        <servlet-name>StatementOfAccountsServlet</servlet-name>
        <servlet-class>StatementOfAccountsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatementOfAccountsServlet</servlet-name>
        <url-pattern>/students/soa</url-pattern>
    </servlet-mapping>
    
    <!-- Home Servlet -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>ISLUStudentPortal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/students/home</url-pattern>
    </servlet-mapping>
    
    <!-- Class Schedule Servlet -->
    <servlet>
        <servlet-name>ScheduleServlet</servlet-name>
        <servlet-class>ScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScheduleServlet</servlet-name>
        <url-pattern>/students/classsched</url-pattern>
    </servlet-mapping>
    
    <!-- Attendance Servlet -->
    <servlet>
        <servlet-name>AttendanceServlet</servlet-name>
        <servlet-class>AttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceServlet</servlet-name>
        <url-pattern>/students/attendance</url-pattern>
    </servlet-mapping>
    
    <!-- Grades Servlet -->
    <servlet>
        <servlet-name>GradesServlet</servlet-name>
        <servlet-class>GradesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GradesServlet</servlet-name>
        <url-pattern>/students/grades</url-pattern>
    </servlet-mapping>
    
    <!-- Transcript Servlet -->
    <servlet>
        <servlet-name>TranscriptServlet</servlet-name>
        <servlet-class>TranscriptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TranscriptServlet</servlet-name>
        <url-pattern>/students/transcript</url-pattern>
    </servlet-mapping>
    
    <!-- Checklist Servlet -->
    <servlet>
        <servlet-name>ChecklistServlet</servlet-name>
        <servlet-class>ChecklistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChecklistServlet</servlet-name>
        <url-pattern>/students/checklist</url-pattern>
    </servlet-mapping>
    
    <!-- Medical Record Servlet -->
    <servlet>
        <servlet-name>MedicalServlet</servlet-name>
        <servlet-class>MedicalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicalServlet</servlet-name>
        <url-pattern>/students/medical</url-pattern>
    </servlet-mapping>
    
    <!-- Profile Servlet -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/students/profile</url-pattern>
    </servlet-mapping>
    
    <!-- About Servlet -->
    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>AboutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/students/about</url-pattern>
    </servlet-mapping>
    
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <!-- Journal Search Servlet -->
    <servlet>
        <servlet-name>JournalSearchServlet</servlet-name>
        <servlet-class>JournalSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JournalSearchServlet</servlet-name>
        <url-pattern>/searchjournalperiodical</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error/500.jsp</location>
    </error-page>
    
    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Student Area</web-resource-name>
            <url-pattern>/students/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>student</role-name>
        </auth-constraint>
    </security-constraint>
    
    <!-- MIME Type Mappings -->
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>jpg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>gif</extension>
        <mime-type>image/gif</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>ico</extension>
        <mime-type>image/x-icon</mime-type>
    </mime-mapping>
    
    <!-- Filters -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/students/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
</web-app>